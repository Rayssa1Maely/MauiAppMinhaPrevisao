<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhaPrevisao.Views.Cadastro"
             Title="Cadastro">
    <VerticalStackLayout
    VerticalOptions="Center"
    Spacing="10"
    Padding="20">

        <Label 
            FontFamily="Poppins-ExtraBold.tff"
            FontSize="50"
            Text="Cadastro"
            HorizontalOptions="Center" />

        <Label Text="Nome: " />
        <Entry x:Name="txt_nome" />

        <Label Text="Email: " />
        <Entry x:Name="txt_email" />

        <Label Text="Senha:" />
        <Entry x:Name="txt_senha" IsPassword="True" />

        <Button Text="Entrar"
            Clicked="Button_Clicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>